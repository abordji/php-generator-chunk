{
    "name": "abordji/php-generator-chunk",
    "description": "A utility function to split a PHP Generator into chunks of a specified length, returning a Generator of Generators, with optional key preservation.",
    "type": "library",
    "authors": [
        {
            "name": "Alexandre Bordji",
            "email": "arezki.bordji@gmail.com"
        }
    ],
    "license": "MIT",
    "version": "1.0",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpro/grumphp": "^2.12",
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "autoload": {
        "files": [
            "src/generator_chunk.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "./tests/"
        }
    }
}
